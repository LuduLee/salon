<Page x:Class="BeautySalon.ServicesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Services">
    <Grid>
        <StackPanel>
            <TextBlock Text="Выберите услуги:"/>
            <ListBox x:Name="servicesListBox" SelectionChanged="ServicesListBox_SelectionChanged" SelectionMode="Multiple">
                <ListBoxItem Content="Маникюр" Tag="1000"/>
                <ListBoxItem Content="Педикюр" Tag="1500"/>
                <ListBoxItem Content="Прическа" Tag="2000"/>
                <ListBoxItem Content="Макияж" Tag="2500"/>
                <ListBoxItem Content="Спа-процедуры" Tag="3000"/>
            </ListBox>

            <TextBlock Text="Общая стоимость:"/>
            <TextBlock x:Name="totalCostTextBlock" FontSize="18" FontWeight="Bold" Margin="0,10"/>
        
        <Button Content="Назад" Click="GoBack_Click"/>
        </StackPanel>
    </Grid>
</Page>